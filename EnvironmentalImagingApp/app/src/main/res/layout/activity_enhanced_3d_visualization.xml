<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_dark"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:titleTextColor="@color/text_primary" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content - Full screen visualization -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- 3D Visualization View (full screen) -->
        <com.environmentalimaging.app.visualization.EnvironmentalVisualizationView
            android:id="@+id/visualizationView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Control Panel Overlay -->
        <LinearLayout
            android:id="@+id/controlsPanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_margin="16dp"
            android:background="@drawable/rounded_background"
            android:backgroundTint="#CC000000"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Point Count -->
            <TextView
                android:id="@+id/pointCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 points"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <!-- Reset Camera Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/resetCameraButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Reset Camera"
                android:textSize="12sp"
                app:cornerRadius="8dp"
                style="@style/Widget.Material3.Button.TonalButton" />

        </LinearLayout>

        <!-- Toggle Controls Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/toggleControlsButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="16dp"
            android:text="Hide Controls"
            android:textSize="12sp"
            app:cornerRadius="20dp"
            app:icon="@drawable/ic_expand_less"
            style="@style/Widget.Material3.Button.Icon" />

        <!-- Settings Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/settingsButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:text="Settings"
            android:textSize="12sp"
            app:cornerRadius="20dp"
            app:icon="@drawable/ic_settings"
            style="@style/Widget.Material3.Button.TonalButton" />

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
